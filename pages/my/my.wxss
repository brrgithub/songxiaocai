/* pages/my/my.wxss */
/* 登录以及余额开始 */
.mywarp .mytop{
  height: 100px;
}
.mywarp .mytop .login{
  height: 60px;
}
.mywarp .mytop .login image{
  width: 40px;
  height: 40px;
  border-radius: 30px;
  position: absolute;
  top: 10px;
  left: 6px;
}
.mywarp .mytop .login .nickname{
  line-height: 60px;
  margin-left: 60px;
  color: darkcyan;
}

.fund{
  flex-direction: row;
  justify-content:space-around;
  flex-wrap: nowrap;
  display: flex;
}
.fund view{
  width: 47%;
  background-color: rgb(255,255,255);
  border-radius: 8px;
  padding: 10px 0;
}
.fund view text:first-child{
  color: rgb(255,116,14);
}
.fund view text:last-child{
  font-size: 12px;
  color: rgb(94,94,94);
}
.fund view text{
  display: block;
  text-align: center;
}
/* 登录以及余额开始 */



/* 我的订单开始 */
.myorder{
  border-radius: 10px;
  padding: 10px 6px 15px 6px;
  width: 92%;
  margin:26px auto 0 auto;
  background-color: #fff;
}
.myorder .ordertext,.function .funtext{
  font-size: 14px;
  display: inline-block;
  margin: 7px 0 13px 3px;
}
.orderlist {
  flex-direction: row;
  justify-content:space-around;
  flex-wrap: nowrap;
  display: flex;
}
.orderlist .order{
  width: 20%;
  text-align: center;
}
.orderlist .order text,.myfun .fun text{
  display: block;
  text-align: center;
  font-size: 11px;
  margin-top: 7px;
}
.orderlist .order image,.myfun .fun image{
  width: 25px;
  height: 25px;
  display: block;
  margin:  auto;
}
/* 我的订单结束 */

/* 功能开始 */
.function{
  border-radius: 10px;
  padding: 10px 6px 15px 6px;
  width: 92%;
  margin: 10px auto;
  background-color: #fff;
}
.myfun{
  margin: auto;
}
.myfun .fun{
  width: 20%;
  display: inline-block;
  margin: 12px 0 0 0;
}


/* 功能结束 */